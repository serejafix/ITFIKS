@model DZ_5.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Confirm Delete?</h1>

<div class="row">
    <div class="col-md-4">
    <form asp-action="Delete" enctype="multipart/form-data">
       <div class="card" style="width: 18rem;">
        <img src="~/Posters/@Model.Poster" asp-append-version="true" />
        <div class="card-body">
            <input type="hidden" asp-for="@Model.Id"/>
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Fio</p>
            <p class="card-text">@Model.Style</p>
            <p class="card-text">@Model.PublishYear</p>
        </div>

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
        </div>
        </form>
    </div>
</div>