@page
@model DZ.Pages.Home.IndexModel
@{
}
<h2>Новости</h2>
<p><a href="/Home/Create">Добавить Новость</a></p>
<table>
    <tr><th>Название</th><th>Описание</th></tr>
    @foreach (var news in Model.News)
    {
        <tr>
            <td>
                <h5 class="card-title">
                    <a asp-page="/Home/Details"
                        asp-route-id="@news.Id"
                       class="text-decoration-none">@news.Name</a>
                </h5>
            </td>
            <td>@news.Description</td>
        </tr>
    }
</table>

