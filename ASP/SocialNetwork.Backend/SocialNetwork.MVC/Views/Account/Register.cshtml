@using SocialNetwork.MVC.Data.EntityModels;
@model SocialNetwork.MVC.ViewModels.RegisterViewModel

<h2>Добро пожаловать на страницу регистрации</h2>

<form method="post" asp-controller="Account" asp-action="Register" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <label asp-for="FirstName"></label><br />
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName"></label><br />
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-outline datepicker w-100">
        <label asp-for="BirthDate"></label><br />
        <input type="date" data-date-format="DD MMMM YYYY" asp-for="BirthDate">
        <span asp-validation-for="BirthDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="ProfilePhoto"></label><br />
        <input type="file" asp-for="ProfilePhoto" />
        <span asp-validation-for="ProfilePhoto"></span>
    </div>
    <div>
        <input type="submit" value="Регистрация" />
    </div>
</form>